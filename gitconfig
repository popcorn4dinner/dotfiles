[user]
	name = Bastian Schnieders
	email = bastian.schnieders@me.com
[color]
	ui = true
[color "diff"]
	meta = yellow
	frag = magenta bold
	commit = yellow bold
	old = red
	new = green
	whitespace = red reverse
[credential]
	helper = osxkeychain
[alias]
  branches = for-each-ref --sort=-committerdate --format=\"%(color:normal)%(authordate:relative)\t%(color:normal)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes
	co = checkout
	br = branch
	ci = commit
	st = status
	unstage = reset HEAD --
	last = log -1 HEAD
  tree = log --graph
[core]
	autocrlf = input
  excludesfile = ~/.gitignore
	pager = diff-so-fancy | less --tabs=4 -RFX
[push]
  default = current
[rebase]
	autosquash = true
[merge]
  tool = meld
[mergetool]
  prompt = false
[mergetool "meld"]
  trustExitCode = true
  cmd = open -W -a Meld --args --auto-merge \"$LOCAL\" \"$BASE\" \"$REMOTE\" --output=\"$MERGED\"